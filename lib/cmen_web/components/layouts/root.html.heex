        }
      }
    </script>
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": [
          {
            "@type": "Question",
            "name": "Ce este menopauza?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Menopauza este o etapă naturală în viața fiecărei femei, marcând încetarea ciclurilor menstruale. Apare de obicei între 45-55 de ani și este diagnosticată după 12 luni consecutive fără menstruație."
            }
          },
          {
            "@type": "Question",
            "name": "Ce este terapia BHRT?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "BHRT (Bio-Identical Hormone Replacement Therapy) este o terapie hormonală care folosește hormoni bioidentici pentru a echilibra nivelurile hormonale în timpul menopauzei, ajutând la reducerea simptomelor și îmbunătățirea calității vieții."
            }
          },
          {
            "@type": "Question",
            "name": "Care sunt simptomele menopauzei?",
            "acceptedAnswer": {
              "@type": "Answer",
              "text": "Simptomele comune includ bufeuri, transpirații nocturne, tulburări de somn, modificări de dispoziție, uscăciunea vaginală, scăderea libidoului și modificări ale pielii și părului."
            }
          }
        ]
      }
    </script>
    <script>
      (() => {
        const setTheme = (theme) => {
          if (theme === "system") {
            localStorage.removeItem("phx:theme");
            document.documentElement.removeAttribute("data-theme");
          } else {
            localStorage.setItem("phx:theme", theme);
            document.documentElement.setAttribute("data-theme", theme);
          }
        };
        if (!document.documentElement.hasAttribute("data-theme")) {
          setTheme(localStorage.getItem("phx:theme") || "system");
        }
        window.addEventListener("storage", (e) => e.key === "phx:theme" && setTheme(e.newValue || "system"));
        
        window.addEventListener("phx:set-theme", (e) => setTheme(e.target.dataset.phxTheme));
      })();
    </script>
